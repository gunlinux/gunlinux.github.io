[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# Indentation override for all JS under lib directory
[*.js]
indent_style = space
indent_size = 4

[**.html]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 4

# Matches the exact files either package.json or .travis.yml
[{package.json,*.yml}]
indent_style = space
indent_size = 2
